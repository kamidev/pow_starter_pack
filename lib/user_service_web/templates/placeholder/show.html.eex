<div class="card-group">
  <div class="card shadow border-0 bg-primary card-padded">
    <%= if Pow.Plug.current_user(@conn).first_name != "" do %>
      <h2 class="text-white mb-4">Welcome, <%= Pow.Plug.current_user(@conn).first_name %></h2>
    <% else %>
      <h2 class="text-white mb-4">Welcome</h2>
    <% end %>

    <a class="btn btn-lg btn-light" href="http://test.localhost.development:4001/">Continue to App</a>
  </div>

  <div class="card card-padded shadow border-0">
    <p>You're logged in as <%= Pow.Plug.current_user(@conn).email %></p>

    <%= link "Edit Your Info", to: Routes.pow_registration_path(@conn, :edit) %>
    <%= link "Invite Your Teammates", to: Routes.pow_invitation_invitation_path(@conn, :new) %>
    <%= link "Log Out", to: Routes.logout_path(@conn, :delete) %>
  </div>
</div>
